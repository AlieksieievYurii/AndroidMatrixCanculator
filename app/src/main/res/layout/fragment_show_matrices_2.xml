<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/ln_matrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                >

            <LinearLayout
                    style="@style/matrix">

                <TextView
                        android:id="@+id/tv_matrix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/matrix"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"/>

                <GridLayout
                        android:id="@+id/gl_matrix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                </GridLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/tv_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ln_matrix"
                android:layout_marginTop="20dp"
                android:textColor="@color/textColor"
                android:textSize="30sp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_action"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="50dp">

            <LinearLayout
                    android:id="@+id/ln_matrix_result"
                    style="@style/matrix">

                <TextView
                        android:id="@+id/tv_matrix_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/matrix_result"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"/>

                <GridLayout
                        android:id="@+id/gl_matrix_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                </GridLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>