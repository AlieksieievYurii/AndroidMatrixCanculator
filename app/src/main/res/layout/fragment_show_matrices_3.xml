<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="100dp">

        <LinearLayout
                android:id="@+id/ln_matrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

            <LinearLayout
                    style="@style/matrix">

                <TextView
                        android:id="@+id/tv_matrix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/matrix"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"/>

                <GridLayout
                        android:id="@+id/gl_matrix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                </GridLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/ln_matrix_result"
                style="@style/matrix"
                android:layout_below="@id/ln_matrix"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp">

            <TextView
                    android:id="@+id/tv_matrix_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/determinant"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"/>

            <TextView
                    android:id="@+id/tv_determinant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="123123"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>